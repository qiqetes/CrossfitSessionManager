<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane id="AnchorPane" prefHeight="800.0" prefWidth="1000.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="crossfitsessionmanager.FXMLManageGroupsController">
   <children>
      <HBox prefHeight="800.0" prefWidth="1000.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="30.0">
         <children>
            <TableView fx:id="tableView" prefHeight="750.0" prefWidth="615.0" HBox.hgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colCode" prefWidth="107.0" text="Code" />
                <TableColumn fx:id="colDefSession" prefWidth="162.0" text="DefaultSesion" />
                  <TableColumn fx:id="colDescription" prefWidth="400.0" text="Description" />
              </columns>
            </TableView>
            <VBox minWidth="200.0" prefHeight="750.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="20.0" top="100.0" />
               </HBox.margin>
               <children>
                  <Button mnemonicParsing="false" onAction="#onClickAddGroup" prefHeight="40.0" prefWidth="678.0" text="Add Group">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
                  <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onClickModify" prefHeight="40.0" prefWidth="678.0" text="Modify">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
                  <Button layoutX="10.0" layoutY="41.0" mnemonicParsing="false" onAction="#onClickShowStats" prefHeight="40.0" prefWidth="678.0" text="Show Stats">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
